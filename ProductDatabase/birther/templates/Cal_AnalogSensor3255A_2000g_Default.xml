<Fragment>
    <!-- 'base' calibration for all sensor channels. Each channel has its own Fragment -->
    <UnivariatePolynomial>
        <CalID value="{sensor.calibrationId}"/>
        <CalReferenceValue value="0"/>
        <!-- Basic linear conversion; "y=mx+b" form -->
        <!-- 2 coef block [A B]: y = A(x-xref) + B -->
        <PolynomialCoef value="0.0610360875868"/> <!-- Base conversion to Gs @ 2000: (2000+2000)/65535 -->
        <PolynomialCoef value="-2000.0"/> <!-- Zero offset in Gs -->
    </UnivariatePolynomial>
</Fragment>
